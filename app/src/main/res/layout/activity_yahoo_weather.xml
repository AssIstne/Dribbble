<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.assistne.dribbble.yahooweather.YHWeatherContainer
        android:id="@+id/yahoo_span_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/yahoo_img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/yahoo_new_york"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/yahoo_img_blurred_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:id="@+id/yahoo_span_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-300dp"
            >
            <TextView
                android:id="@+id/yahoo_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52Ëš"
                android:textSize="120sp"
                android:textColor="@android:color/white"
                android:layout_marginStart="16dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/yahoo_txt"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/radius_bg"
                />
        </RelativeLayout>
    </com.assistne.dribbble.yahooweather.YHWeatherContainer>
    <Button
        android:id="@+id/yahoo_btn_blur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="blur"
        />
</LinearLayout>